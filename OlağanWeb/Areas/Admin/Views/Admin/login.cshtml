@{
    Layout = "_LayoutAdmin";
}
@model string

<link rel="stylesheet" href="~/css/index.css">

<p>@Model</p>

<form asp-action="login" asp-controller="admin" method="post">

    <div>
    <div class="mb-3">
        <input class="form-control" required name="username" placeholder="Kullanıcı Adı" rows="3">
    </div>
    <div class="mb-3">
        <input class="form-control" type="password" required name="password" placeholder="Şifre" rows="3">
    </div>
        <button class="btn btn-primary" type="submit"> Giriş Yap </button>
    </div>

</form>