@{
    Layout = "_LayoutAdmin";
}

<form method="post">

    @if (ViewBag.hata != null)
    {
        <h1>@ViewBag.hata </h1>
    }

    <div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
            <input class="form-control" required name="Title" placeholder="Başlık" id="exampleFormControlTextarea1" rows="3">
        </div>

          <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Kategori</label>
            <input class="form-control" required name="Category" placeholder="Kategori" id="exampleFormControlTextarea1" rows="3">
        </div>
   
       <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Yazar</label>
            <input class="form-control" required name="Writer" placeholder="Yazar" id="exampleFormControlTextarea1" rows="3">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Sayı</label>
            <input class="form-control" required name="number" placeholder="Sayı" id="exampleFormControlTextarea1" rows="3">
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Fotoğraf</label>
            <input class="form-control" required name="picture" placeholder="Fotoğraf" rows="3">
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Metin</label>
            <textarea class="form-control" name="Text" id="default" placeholder="Metin" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Referanslar</label>
            <textarea class="form-control" required name="Referances" id="default" placeholder="Referanslar" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Açıklama</label>
            <input class="form-control" required name="Summary" placeholder="Açıklama"  rows="3">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" name="PublishedInOlaganSiir"  class="form-check-input" id="PublishedInOlaganSiir" value="true">
            <label class="form-check-label" for="PublishedInOlaganSiir"> Olagan Şiir'de Yayınlandı </label>
        </div>

        <input type="submit" value="Ekle" > 
    </div>
</form>


