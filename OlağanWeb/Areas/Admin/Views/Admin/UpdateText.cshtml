@{
    Layout = "_LayoutAdmin";
}

@model TextModel

<form method="post">

    @if (ViewBag.hata != null)
    {
        <h1>@ViewBag.hata </h1>
    }

    <div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
            <textarea class="form-control" required name="Title" placeholder="Başlık" rows="3">@Model.Title</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Kategori</label>
            <textarea class="form-control" required name="Category"  placeholder="Kategori" id="exampleFormControlTextarea1" rows="3">@Model.Category</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Yazar</label>
            <textarea class="form-control" required name="Writer" placeholder="Yazar" id="exampleFormControlTextarea1" rows="3">@Model.Writer</textarea>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Sayı</label>
            <textarea class="form-control" required name="number"  placeholder="Sayı" id="exampleFormControlTextarea1" rows="3">@Model.number</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Fotoğraf</label>
            <textarea class="form-control" name="picture" placeholder="Fotoğraf" id="exampleFormControlTextarea1" rows="3"> @Model.picture </textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Metin</label>
            <textarea class="form-control" name="Text" placeholder="Metin" rows="3">@Model.Text</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Referanslar</label>
            <textarea class="form-control" name="Referances" placeholder="Referanslar" rows="3">@Model.Referances</textarea>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Açıklama</label>
            <textarea class="form-control" required name="Summary" placeholder="Açıklama" id="exampleFormControlTextarea1" rows="3">@Model.Summary</textarea>
        </div>

        <input class="form-control" type="hidden" name="Id" value="@Model.Id">


        <div class="mb-3 form-check">
            @if (Model.PublishedInOlaganSiir)
            {
                <input type="checkbox" name="PublishedInOlaganSiir" class="form-check-input" id="PublishedInOlaganSiir" checked value="true">
            }
            else
            {
                <input type="checkbox" name="PublishedInOlaganSiir" class="form-check-input" id="PublishedInOlaganSiir" value="true">
            }

            <label class="form-check-label" for="PublishedInOlaganSiir"> Olagan Şiir'de Yayınlandı </label>
        </div>

        <button type="submit"> Ekle </button>
    </div>
</form>


